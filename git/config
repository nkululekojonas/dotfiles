[user]
    name = Nkululeko Jonas
    email = nkululekojonas@gmail.com

[core]
    editor = vim
	autocrlf = false
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.config/git/.gitignore_global
	eol = lf

[alias]
    st = status
    co = checkout
    ci = commit
    br = branch
    lg = log --oneline --graph --decorate
    amend = commit --amend
    last = log -1 HEAD
    unstage = reset HEAD --
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    changes = diff --name-status -r HEAD

[branch]
    autosetuprebase = always

[merge]
    tool = vimdiff
    conflictstyle = diff3
    ff = only

[diff]
    tool = vimdiff

[push]
    default = simple

[color]
    ui = true
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[pull]
    rebase = true
[fsck]
	zeroPaddedFilemode = ignore
[fetch "fsck"]
	zeroPaddedFilemode = ignore
[receive "fsck"]
	zeroPaddedFilemode = ignore
[oh-my-zsh]
	lastVersion = 80fa5e137672a529f65a05e396b40f0d133b2432
