{
  "collaboration_panel": {
    "dock": "right"
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "vimMode.timeout": 0,
  "vimMode.timeoutlen": 0,
  "notification_panel": {
    "dock": "right"
  },
  "chat_panel": {
    "dock": "left"
  },
  "assistant": {
    "dock": "left",
    "version": "2"
  },
  "keybindings": {
    "vim_mode": true
  },
  "features": {
    "inline_completion_provider": "none" // Keeps the editor uncluttered
  },
  "ui": {
    "show_tabs": false, // Hides tabs for a cleaner interface
    "show_status_bar": false, // Hides the status bar to minimize distractions
    "show_minimap": false, // Hides the minimap for a cleaner look
    "show_line_numbers": true // Keeps line numbers visible for better navigation
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "The Dark Side"
  },
  "notifications": {
    "enabled": false // Disables notifications to reduce interruptions
  },
  "font": {
    "ui_font_size": 14,
    "buffer_font_size": 14,
    "line_height": 1.4 // Optimal line height for readability
  },
  "autosave": "on_focus_change"
}
